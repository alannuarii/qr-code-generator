<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <!-- AWAL INPUT  -->

    <main>
      <section class="home">
        <div class="container-fluid h-100">
          <div class="row h-100">
            <div class="col-6 mx-auto my-auto">
              <h1 class="text-center mb-3">QR CODE GENERATOR</h1>
              <div class="card p-5">
                <form class="form" action="/qrcode" method="POST">
                  <label for="url">URL or Text</label>
                  <input name="url" class="form-control form-control-lg" placeholder="Insert URL or text here" type="text" required />

                  <label for="errorCorrectionLevel" class="mt-3">Error Correction Level</label>
                  <select class="form-select" aria-label="Default select example" name="errorCorrectionLevel" required>
                    <option selected>Open this select menu</option>
                    <option value="L">Low (~7% of Error Resistance)</option>
                    <option value="M">Medium (~15% of Error Resistance)</option>
                    <option value="Q">Quartile (~25% of Error Resistance)</option>
                    <option value="H">High (~30% of Error Resistance)</option>
                  </select>

                  <label for="customRange3" class="mt-3">Margin</label>
                  <div class="row d-flex align-items-center">
                    <div class="col-11">
                      <input type="range" class="form-range" min="1" max="5" step="1" id="customRange3" name="margin" required />
                    </div>
                    <div class="col-1">
                      <h5 id="selectmargin">3</h5>
                    </div>
                  </div>

                  <label for="flexRadioDefault1" class="mt-3">Size</label>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="width" id="flexRadioDefault1" value="200" />
                    <label class="form-check-label" for="flexRadioDefault1"> Small </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="width" id="flexRadioDefault1" value="400" checked />
                    <label class="form-check-label" for="flexRadioDefault1"> Medium </label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="radio" name="width" id="flexRadioDefault1" value="600" />
                    <label class="form-check-label" for="flexRadioDefault1"> Large </label>
                  </div>

                  <label for="exampleColorInput" class="mt-3">Color</label>
                  <div>
                    <input type="color" class="form-control form-control-color d-inline-block" id="exampleColorInput" name="dark" value="#000000" title="QR Code Color" />
                    <input type="color" class="form-control form-control-color d-inline-block" id="exampleColorInput" name="light" value="#ffffff" title="Background Color" />
                  </div>

                  <div class="d-flex justify-content-center">
                    <div class="d-inline-block me-2"><button type="submit" class="btn mt-3">Generate</button></div>
                    <div class="d-inline-block"><button type="reset" class="btn mt-3">Reset</button></div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </section>
    </main>

    <!-- AKHIR INPUT  -->
    <%- include('../partials/footer') %>
  </body>
</html>
